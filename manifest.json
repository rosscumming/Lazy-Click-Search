{
  "name": "Lazy Click Search",
  "description": "An easy way to search your favourite websites",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Go on, click me!",
    "default_popup": "popup.html"
  },
  "permissions": ["contextMenus", "storage"],
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}
